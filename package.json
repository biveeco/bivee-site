{
  "name": "bivee.co",
  "version": "0.1.0",
  "description": "Refresh of the Bivee website",
  "main": "index.js",
  "config": {
    "css_src": "source/assets/stylesheets",
    "css_bundle": "source/assets/dist/stylesheets",
    "js_src": "source/assets/dist/javascripts",
    "icons_src": "./source/assets/images/icons",
    "icons_dest": "./source/components"
  },
  "scripts": {
    "start": "npm run build && parallelshell 'npm run javascripts:watch' 'npm run styles:watch'",
    "modernizr": "cd $npm_package_config_js_src/vendor && modernizr -c modernizr.config.json",
    "postmodernizr": "npm run javascripts:build",
    "javascripts:build": "webpack -p --bail --",
    "javascripts:watch": "webpack --watch -d --",
    "styles": "node-sass --include-path node_modules --importer ./node_modules/node-sass-import-once/index.js --output $npm_package_config_css_bundle $npm_package_config_css_src",
    "styles:autoprefixer": "postcss --use autoprefixer --autoprefixer.browsers '> 5%, ie >= 8' -r $npm_package_config_css_bundle/*.css",
    "styles:build": "npm run styles && npm run styles:autoprefixer",
    "styles:watch": "npm run styles -- -w",
    "icons": "svg-sprite --symbol --symbol-dest $npm_package_config_icons_dest --symbol-sprite 'spritemap.erb' --symbol-inline --symbol-prefix 'icon-%s' $npm_package_config_icons_src/**/*.svg",
    "middleman": "bundle exec middleman build --",
    "build": "npm run styles:build && npm run javascripts:build",
    "predeploy": "npm run middleman",
    "deploy": "git-directory-deploy --directory build --branch master"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/biveeco/bvSite.git"
  },
  "author": "Bivee, Inc.",
  "bugs": {
    "url": "https://github.com/biveeco/bvSite/issues"
  },
  "homepage": "https://github.com/biveeco/bvSite#readme",
  "dependencies": {
    "SassyLists": "git+https://github.com/at-import/SassyLists.git",
    "bourbon": "^4.2.6",
    "clipboard": "^1.5.12",
    "include-media": "^1.4.1",
    "jquery": "^2.2.0",
    "modernizr": "^3.3.1",
    "modernizr-mixin": "^3.0.7",
    "modularscale-sass": "^2.1.1",
    "normalize.css": "^7.0.0",
    "picturefill": "latest",
    "sassy-lists": "git+https://github.com/at-import/SassyLists.git"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "babel-core": "^6.4.5",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "clean-webpack-plugin": "^0.1.6",
    "git-directory-deploy": "^1.3.0",
    "node-sass": "^3.7.0",
    "node-sass-import-once": "^1.2.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.5.1",
    "svg-sprite": "^1.3.1",
    "svgo": "^0.6.6",
    "uglifycss": "0.0.20",
    "webpack": "^1.12.10"
  }
}
