{
  "name": "bivee.co",
  "version": "0.0.1",
  "description": "Refresh of the Bivee website",
  "main": "index.js",
  "config": {
    "js_src": "source/assets/javascripts/"
  },
  "scripts": {
    "modernizr": "mkdir -p $npm_package_config_js_src/vendor && cd $npm_package_config_js_src/vendor && modernizr -c modernizr.config.json",
    "postmodernizr": "npm run javascripts:build --",
    "javascripts:build": "webpack --bail --",
    "javascripts:dev": "webpack --watch -d --",
    "build": "bundle exec middleman build --",
    "predeploy": "npm run build",
    "deploy": "git-directory-deploy --directory build --branch gh-pages"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/biveeco/bvSite.git"
  },
  "author": "Bivee, Inc.",
  "bugs": {
    "url": "https://github.com/biveeco/bvSite/issues"
  },
  "homepage": "https://github.com/biveeco/bvSite#readme",
  "dependencies": {
    "jquery": "^2.2.0",
    "modernizr": "^3.3.1",
    "modernizr-mixin": "^3.0.7",
    "normalize.css": "latest",
    "picturefill": "latest"
  },
  "devDependencies": {
    "SassyLists": "git+https://github.com/at-import/SassyLists.git",
    "babel-core": "^6.4.5",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "bourbon": "^4.2.6",
    "clean-webpack-plugin": "^0.1.6",
    "git-directory-deploy": "^1.3.0",
    "include-media": "^1.4.1",
    "modernizr-mixin": "^3.0.7",
    "modularscale-sass": "^2.1.1",
    "watch": "^0.17.1",
    "webpack": "^1.12.12"
  }
}
