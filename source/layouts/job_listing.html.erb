<%#
    Job listing layout
    - details of a position we're hiring for
%>

<% wrap_layout :layout do %>
  <%# header %>
  <%= component 'main_header' %>

  <article class="margin-bottom-xwide padding-y-wide padding-x-outside">
    <% component 'wrapper', locals: { width: 'narrow' } do %>

      <!-- title and posted date -->
      <header class="padding-bottom t-align-center">
  	    <h1 class="t-scale-beta"><%= current_page.data.title %></h1>
        <p class="padding-top-xnarrow t-scale-zeta t-heading c-text-secondary">
          Posted
          <strong>
            <time datetime="<%= current_page.data.posted %>">
              <%= Time.parse(current_page.data.posted.to_s).strftime("%B %d, %Y") %>
            </time>
          </strong>
        </p>
    	</header>

      <div class="t-content"><%= yield %></div>
    <% end %>
  </article>
<% end %>
