<article class="l-wrapper">
    <h1>About us or some thoughtful headline</h1>
    <p><strong>Intro</strong> <%= lorem.sentences 6 %></p>
    <p><%= lorem.sentences 3 %></p>
    <nav>
        <a href="#approach">Approach</a> â€¢ <a href="#people">People</a>
    </nav>

    <section class="has-border has-border--top l-has-margin l-has-margin--top" id="approach">
        <h1>Our approach</h1>
        <p><%= lorem.sentences 3 %></p>

        <% (0...3).each do %>
        <section class="field">
            <h1>General Phase</h1>
            <%= image_tag lorem.image('600x300') %>
            <p><strong>Description</strong> <%= lorem.sentences rand(3...8) %></p>
            <a href="/work/case_study" class="reference">Case study example</a>
            <h2>Technique/exercise/tool</h2>
            <p><%= lorem.sentences rand(3...8) %></p>
            <a href="" class="reference">Side project</a>
        </section>
        <% end %>
    </section>

    <section class="has-border has-border--top" id="people">
        <h1>Our people</h1>
        <p><%= lorem.sentences 3 %></p>

        <ul>
            <% (0...5).each do %>
            <li class="reference">
                <% link_to "#" do %><%= image_tag lorem.image('100x100') %><% end %>
                <h2>Staff person name</h2>
                <p><%= lorem.sentences 3 %></p>
                <%= link_to "More about [person] &rsaquo;", "#" %>
            </li>
            <% end %>
        </ul>
    </section>
</article>
