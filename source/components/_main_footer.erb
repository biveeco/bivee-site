<%
  # Main Footer component
  # -> the footer appearing at the bottom of every page
%>

<footer data-ui-bookend="horizontal@xsmall" class="padding padding-y-narrow c-theme-dark c-well border-top" role="contentinfo">
  <% link_to "/", data: { "ui-bookend-item": "left" }, style: "max-width: 3.5rem;" do %>
    <%= image_tag 'logos/logo-bivee-reverse-bw.svg', alt: 'Bivee' %>
  <% end %>
  <small data-ui-bookend-item="right" class="l-margin-top-narrow l-no-margin@xsmall t-right@xsmall t-scale-eta c-text-tertiary">
    &copy; Copyright <%= Time.now.year %> Bivee Inc. All rights reserved.
  </small>
</footer>
