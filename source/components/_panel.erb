<%#
    Panel component
    -> For short content in scrolling sections. Meant to be full-width.
    -> @param theme STRING (optional): name of color theme, e.g. "reverse" or "wash"

    Depends on:
    components/_panel.scss
%>
<% theme ||= "default" %>
<% classes ||= false %>
<% slug ||= false %>

<section class="panel<%= " c-theme-#{theme}" if theme != "default" %><%= " #{classes}" if classes %>">
    <% if slug %>
        <span class="panel-slug"><%= slug %></span>
    <% end %>
    <%= yield %>
</section>
