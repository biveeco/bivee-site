<%
  # Staff list
  # -> A grid of staff listings

  # Locals:
  # staff - ARRAY: the staff to display
  classes ||= false # STRING: additional modifier classes, if needed
%>

<ul data-ui-gallery<%= " class='#{classes}'" if classes %>>
  <% staff.each do |profile| %>
    <li data-ui-gallery-item class="t-align-center">
      <% link_to profile.url, class: 'display-block margin-bottom border-bottom' do %>
        <%= image_tag "portraits/#{profile.data.portrait.thumb}", alt: profile.data.name %>
      <% end %>
      <h3 class="t-scale-epsilon padding-bottom-xxnarrow"><%= link_to profile.data.name, profile.url %></h3>
      <%= link_to profile.data.role.level, profile.url, class: 't-heading t-weight-bold t-scale-eta c-highlight padding-bottom-xxnarrow' unless profile.data.role.level == 'Team' %>
      <%= link_to profile.data.role.title, profile.url, class: "t-heading t-scale-eta" %>
    </li>
  <% end %>
</ul>
