<%
  # List of other people shown at the bottom of profile, partner pages

  # Locals:
  # exclude ||= []
%>

<!-- List of other people -->
<% component 'panel', locals: {
  theme: 'light',
  painted: rand(1..9)
} do %>
  <% component 'wrapper', locals: { width: 'wide' } do %>
    <h2 class="t-heading t-scale-beta t-align-center padding-bottom"><%= data.people.headline.nav %></h2>

    <% data.people.groups.each_with_index do |group, index| %>
        <% if group.folder == 'staff' %>
          <%= component "people_list", locals: {
            group: find_people(group: group.folder, exclude: (exclude || []))
          } %>
        <% end %>
    <% end %>
  <% end %>
<% end %>
