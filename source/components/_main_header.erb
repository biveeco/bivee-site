<%#
    Main Header component
    - the header appearing at the top of every page

    Locals:
    - STRING theme (optional): color theme

    Styles:
    - modules/main_header
    - layout/bookend
%>

<% theme ||= "default" %>

<header class="main_header bookend bookend--horizontal l-padding-top-wide c-theme-<%= theme %> c-no-bg border-bottom" role="banner">
    <% link_to "/", :class => "logo bookend-item bookend-item--left" do %>
        <%= component "logo", locals: { filename: "logo-bivee#{'-reverse-bw' unless theme == "default" }" } %>
    <% end %>
    <%= link_to "Contact us", "mailto:#{data.site.email}", :class => "button button--small bookend-item bookend-item--right" %>
</header>
